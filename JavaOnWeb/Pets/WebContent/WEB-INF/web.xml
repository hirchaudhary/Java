<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Pets</display-name>
  <description>Different type of pets</description>
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>com.hiral.controllers.Pets.Index</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Dog</servlet-name>
    <servlet-class>com.hiral.controllers.Pets.Dog</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dog</servlet-name>
    <url-pattern>/animal/dog</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Cat</servlet-name>
    <servlet-class>com.hiral.controllers.Pets.Cat</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Cat</servlet-name>
    <url-pattern>/animal/cat</url-pattern>
  </servlet-mapping>
</web-app>